<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="dialogs.EditPriority"
      prefHeight="250.0" prefWidth="420.0">
    <Label text="Название приоритета" layoutX="10" layoutY="15"/>
    <TextField layoutX="170" layoutY="10" fx:id="newItem" maxHeight="10" maxWidth="150" />
    <Button layoutX="330" layoutY="10" text="Добавить" onMouseClicked="#addNewItem"/>
    <TableView fx:id="statuses" layoutX="10" layoutY="40" prefWidth="200" maxHeight="200">
        <columns>
            <TableColumn text="Название" fx:id="name" prefWidth="190"/>
        </columns>
    </TableView>
    <Button layoutY="40" layoutX="230" text="Удалить" onMouseClicked="#deleteItem"/>
    <Button layoutY="70" layoutX="230" text="Сохранить" onMouseClicked="#saveElements"/>
    <Button layoutY="100" layoutX="230" text="Выше" onMouseClicked="#moveUp" />
    <Button layoutY="130" layoutX="230" text="Ниже" onMouseClicked="#moveDown" />
</Pane>
